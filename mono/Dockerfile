FROM accupara/ubuntu:16.04
MAINTAINER Accupara Inc. "contact@accupara.com"

RUN sudo apt-get update && \
    sudo apt-get install -y \
         autoconf \
         automake \
         build-essential \
         cmake \
         gettext \
         git \
         libtool \
         libtool-bin \
         mono-devel
